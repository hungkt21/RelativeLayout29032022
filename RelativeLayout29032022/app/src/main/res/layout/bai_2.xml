<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv1"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="#E10A0A"
        android:text="1"
        android:layout_width="30dp"
        android:layout_height="20dp"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_below="@id/tv1"
        android:layout_toRightOf="@id/tv1"
        android:gravity="center"
        android:background="#2A8708"
        android:text="2"
        android:layout_width="30dp"
        android:layout_height="20dp"/>
    <TextView
        android:id="@+id/tv3"
        android:layout_below="@id/tv2"
        android:layout_toRightOf="@id/tv2"
        android:gravity="center"
        android:background="#EAD30F"
        android:text="3"
        android:layout_width="30dp"
        android:layout_height="20dp"/>
    <TextView
        android:id="@+id/tv4"
        android:layout_below="@id/tv3"
        android:layout_toRightOf="@id/tv3"
        android:gravity="center"
        android:background="#780573"
        android:text="4"
        android:layout_width="30dp"
        android:layout_height="20dp"/>
    <TextView
        android:id="@+id/tv5"
        android:layout_below="@id/tv4"
        android:layout_toLeftOf="@id/tv4"
        android:gravity="center"
        android:background="#834713"
        android:text="5"
        android:layout_width="30dp"
        android:layout_height="20dp"/>
    <TextView
        android:id="@+id/tv6"
        android:layout_below="@id/tv5"
        android:layout_toLeftOf="@id/tv5"
        android:gravity="center"
        android:background="#956236"
        android:text="6"
        android:layout_width="30dp"
        android:layout_height="20dp"/>
    <TextView
        android:id="@+id/tv7"
        android:layout_below="@id/tv6"
        android:layout_toLeftOf="@id/tv6"
        android:gravity="center"
        android:background="#1DD192"
        android:text="7"
        android:layout_width="30dp"
        android:layout_height="20dp"/>

</RelativeLayout>